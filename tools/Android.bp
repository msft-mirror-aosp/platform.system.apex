package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

python_binary_host {
    name: "deapexer",
    srcs: [
        "deapexer.py",
    ],
    version: {
        py2: {
            enabled: false,
        },
        py3: {
            enabled: true,
            embedded_launcher: true,
        },
    },
    libs: [
        "apex_manifest",
    ],
    required: [
        "debugfs_static",
    ],
}

python_binary_host {
    name: "apex_compression_tool",
    srcs: [
        "apex_compression_tool.py",
    ],
    version: {
        py2: {
            enabled: false,
        },
        py3: {
            enabled: true,
            embedded_launcher: true,
        },
    },
}

python_test_host {
    name: "apex_compression_test",
    main: "apex_compression_test.py",
    srcs: [
        "apex_compression_test.py",
    ],
    data: [
        ":com.android.example.apex",
        ":apex_compression_test_host_tools"
    ],
    version: {
        py2: {
            enabled: false,
        },
        py3: {
            enabled: true,
        },
    },
    test_suites: ["general-tests"],
    required: ["apex_compression_test_host_tools"],
}

genrule {
    name: "apex_compression_test_host_tools",
    srcs: [
        ":current_android_jar",
    ],
    out: ["apex_compression_test_host_tools.zip"],
    tools: ["apex_compression_tool", "deapexer", "soong_zip"],
    cmd: "HOST_OUT_BIN=$$(dirname $(location apex_compression_tool)) && " +
        "HOST_SOONG_OUT=$$(dirname $$(dirname $$HOST_OUT_BIN)) && " +
        "BASE=$(genDir)/binary_files && " +
        "BIN=$$BASE/bin && " +
        "mkdir -p $$BIN && " +
        "cp $$(echo $(in) | tr \" \" \"\\n\" | grep -v apex) $$BIN && " +
        "cp $(location apex_compression_tool) $$BIN && " +
        "cp $(location deapexer) $$BIN && " +
        "cp $(location soong_zip) $$BIN && " +
        "$(location soong_zip) -C $$BASE -D $$BASE -o $(out) && " +
        "rm -rf $$BASE",
}

